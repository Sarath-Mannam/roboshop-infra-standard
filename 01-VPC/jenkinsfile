pipeline {
    agent { node { label 'Agent-1' } }

    stages {
        stage('Init') {
            steps {
                sh '''
                    cd 01-VPC
                    ls -ltr
                    pwd
                    terraform init
                '''
            }
        }
        stage('Plan') {
            steps {
                sh '''
                    cd 01-VPC
                    ls -ltr
                    pwd
                    terraform plan
                '''
            }
        }
    }

    post { 
        always { 
            echo 'I will always run whether job is success or not'
        }
        success {
            echo 'I will run only when job is success'
        }
        failure {
            echo 'I will run only when job is failed'
        }
    }
}